# MongoDB Configuration
# Replace with your actual MongoDB Atlas connection string
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=relai

# Temporal Configuration
# Temporal server host (default for local development)
TEMPORAL_HOST=localhost:7233
# Temporal namespace (default namespace)
TEMPORAL_NAMESPACE=default
# Task queue name for RelAI workflows
TEMPORAL_TASK_QUEUE=relai-task-queue

# Slack Bot Configuration
# Your Slack Bot Token (starts with xoxb-)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
# Your Slack App Token (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
# Slack channel where the bot will post messages
SLACK_CHANNEL=general

# Google OAuth Configuration
# Google OAuth Client ID
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# Google OAuth Client Secret
GOOGLE_CLIENT_SECRET=your-google-client-secret
# JWT Secret for token signing
JWT_SECRET=your-super-secret-jwt-key-here

# OpenAI Configuration (for LLM parsing)
# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Configuration
# Port for the FastAPI server (default: 8000)
PORT=8000
# Host for the FastAPI server (default: 0.0.0.0)
HOST=0.0.0.0

# Frontend Configuration
# Frontend URL for CORS (default: http://localhost:5173)
FRONTEND_URL=http://localhost:5173

# Development/Production Mode
# Set to 'development' or 'production'
ENVIRONMENT=development

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO 